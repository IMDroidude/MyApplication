<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentTransferActivity">

    <Button
        android:id="@+id/btn_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Dollar"
        app:layout_constraintBottom_toTopOf="@+id/btn_pound"
        app:layout_constraintEnd_toEndOf="@+id/btn_pound"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_pound"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Pound"
        app:layout_constraintBottom_toTopOf="@+id/btn_rupees"
        app:layout_constraintEnd_toEndOf="@+id/btn_rupees"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_rupees"
        app:layout_constraintTop_toBottomOf="@+id/btn_dollar" />

    <Button
        android:id="@+id/btn_rupees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Transfer Ruppes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pound" />
</androidx.constraintlayout.widget.ConstraintLayout>